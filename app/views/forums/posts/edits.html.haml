- content_for(:title) { "Post Edits | #{@thread.title}" }

= render 'forums/head', object: nil, subheading: 'Post edits', root_navigable: true

%hr

.btn-toolbar.guttered.mb-3
  .card.bg-dark.px-3.py-2.m-1
    %b.text-white
      %span
        Posted in thread
      = present(@thread).link

  .spacer

  = bootstrap_paginate @edits, list_classes: ['pagination m-1']

- @edits.each do |post_edit|
  = render 'post_edit', post_edit: post_edit, class: 'mb-3'

.d-flex.justify-content-end
  = bootstrap_paginate @edits
