- content_for(:title) { 'Search Posts | Forums' }

= render 'forums/head', object: nil, subheading: 'Search posts', root_navigable: true

%hr

.btn-toolbar.guttered.mb-3
  - if @user
    .card.bg-dark.px-3.py-2.m-1
      %b.text-white
        %span
          Showing posts by

        = present(@user).link

  .spacer

  = bootstrap_paginate @posts, list_classes: ['pagination m-1']

- if @posts.empty?
  = render 'forums/posts/empty'
- else
  - @posts.each do |post|
    .mb-4
      %small.font-weight-bold
        Thread: #{present(post.thread).link}

      = render post, quote_id: nil

.d-flex.justify-content-end
  = bootstrap_paginate @posts
