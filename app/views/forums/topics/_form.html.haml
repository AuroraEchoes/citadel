= f.text_field :name

.form-group
  %label
    Status

  .row
    .px-3.py-1= f.check_box :locked, label: 'Locked', label_class: 'cursor-pointer'
    .border-right.d-none.d-md-block
    .px-3.py-1= f.check_box :pinned, label: 'Pinned', label_class: 'cursor-pointer'
    .border-right.d-none.d-md-block
    .px-3.py-1= f.check_box :hidden, label: 'Hidden', label_class: 'cursor-pointer'

.form-group
  %label
    Options

  = f.check_box :default_locked, label: 'Default new threads to "Locked"', label_class: 'cursor-pointer'
  = f.check_box :default_hidden, label: 'Default new threads to "Hidden"', label_class: 'cursor-pointer'
