- content_for(:title) { "#{@topic.name} | Forums" }

/ TODO: consider moving these action buttons into forums/head instead
.row.no-gutters.justify-content-end.float-right.mt-2
  - if user_can_manage_topic?
    = link_to edit_forums_topic_path(@topic), class: 'btn btn-sm btn-link ml-2' do
      %span
        Edit Topic

  - if user_signed_in?
    / TODO: make these button conditionals better - Bryan
    - if current_user.forums_subscriptions.where(topic: @topic).exists?
      = button_to toggle_subscription_for_forums_topic_path(@topic), method: :patch,
                  class: 'btn btn-sm btn-danger centered ml-2' do
        = render 'forums/unsubscribe_btn'
    - else
      = button_to toggle_subscription_for_forums_topic_path(@topic), method: :patch,
                  class: 'btn btn-sm btn-primary centered ml-2' do
        = render 'forums/subscribe_btn'

= render 'forums/head', object: @topic

= render 'forums/page', topics: @subtopics, threads: @threads, parent_topic: @topic
