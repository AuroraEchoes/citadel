!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ozfortress
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header#banner.banner-ozf
      .container
        %a= image_tag 'ozfortress_logo.png'

    %nav#navbar.navbar.navbar-ozf.affix-top{role: 'navigation', data: {spy: 'affix', 'offset-top' => 106}}
      .container
        %button.navbar-toggle.collapsed.navbar-left{type: 'button', data: {toggle: 'collapse', target: '#navbar-collapse'}}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        #navbar-collapse.collapse.navbar-collapse.navbar-left
          %ul.nav.navbar-nav
            %li.active= link_to('Home', :pages_home)
            %li= link_to('Forums', :pages_home)
            %li= link_to('Warzone', :pages_home)
            %li= link_to('Maps', :pages_home)
            %li= link_to('Mediacentral', :pages_home)
            %li= link_to('Users', :pages_users)
        .navbar-right
          %ul.nav.navbar-nav
            - if user_signed_in?
              %li
                %a.dropdown-toggle{data: {toggle: 'dropdown'}}
                  = current_user.name
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to("Profile", user_path(current_user))
                  %li= link_to("Settings", edit_user_path(current_user))
                  %li= link_to("Logout", logout_user_path)
            - else
              %li
                = link_to(image_tag('steam/login.png'), user_omniauth_authorize_path(:steam))


    .container
      = yield

