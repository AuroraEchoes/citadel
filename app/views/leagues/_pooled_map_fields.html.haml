%li.list-group-item.nested-fields
  .d-flex
    = f.collection_select :map_id, Map.all, :id, :name, hide_label: true, wrapper: { class: 'w-100 mr-3 mb-0' }

    = link_to_remove_association f, class: 'btn btn-danger',
        data: { confirm: 'Are you sure you want to remove this Map?' } do
      = inline_svg_tag 'open_iconic/trash.svg', class: 'icon'

