%h1= @league.name

%h4
  - if @league.signuppable?
    Edit sign up for #{@roster.name}
  - else
    Edit #{@roster.name}

.panel.panel-default
  .panel-heading Info
  .panel-body
    = bootstrap_form_for @roster, as: :roster,
        url: league_roster_path(@league, @roster) do |f|

      - if user_can_edit_league?
        = f.text_field :name
        = f.select :division_id, divisions_select, label: 'Division'
        = f.check_box :disbanded
        = f.number_field :seeding
        = f.number_field :ranking
      = f.markdown_editor :description, label: 'Tell us about your team', rows: 10

      = f.submit 'Update'
      = link_to 'Cancel', league_roster_path(@league, @roster), class: 'btn btn-default'

- if user_can_disband_roster? && !user_can_edit_league?
  .panel.panel-danger
    .panel-heading Danger Zone
    .panel-body
      = button_to league_roster_path(@league, @roster), method: :delete,
                      class: 'btn btn-danger',
                      data: { confirm: roster_destroy_confirm } do
        %span.glyphicon.glyphicon-trash
        = roster_destroy_label
