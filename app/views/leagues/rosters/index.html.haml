- content_for(:title) { "Signups | #{@league.name}" }

%h1= @league
%h2 Signups

- @divisions.each do |div|
  .panel.panel-default
    .panel-heading #{div} Division
    %ul.list-group
      - present_collection(div.rosters).each do |roster|
        - bg = roster.approved? ? 'list-group-item-success' : 'list-group-item-warning'
        %li{ class: "list-group-item #{bg}" }
          = roster.admin_link
