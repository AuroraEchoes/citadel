= bootstrap_form_for @roster,
    url: league_approve_roster_path(@competition, @roster) do |f|
  = f.text_field :name
  = f.select :division_id, divisions_select, label: 'Desired Division'

  = f.submit 'Approve', class: 'btn btn-success'
  = link_to 'Cancel', league_roster_path(@competition, @roster), class: 'btn btn-default'
