- unless @roster.approved
  .alert.alert-warning
    %span.glyphicon.glyphicon-warning-sign
    Roster is awaiting approval

- if user_can_edit_team?
  = link_to edit_league_roster_path(@competition, @roster), class: 'btn btn-default pull-right' do
    Edit
    %span.glyphicon.glyphicon-cog

%h1 #{link_to @competition, league_path(@competition)}: #{@roster.division}

%h2= @roster.name
Team #{link_to @roster.team, team_path(@roster.team)}
signed up on #{@roster.created_at.strftime('%c')}

%p

.panel.panel-default
  .panel-heading Info
  .panel-body= markdown @roster.description

.panel.panel-default
  .panel-heading Roster
  %ul.list-group
    - @roster.player_users.each do |user|
      %li.list-group-item
        = user_listing(user)

.panel.panel-default
  .panel-heading Transfers
  %ul.list-group
    - @roster.transfers.each do |transfer|
      %li.list-group-item
        = user_listing(transfer.user)
        - if transfer.is_joining?
          joined the team
        - else
          left the team
        on #{transfer.created_at.strftime('%c')}

.panel.panel-default
  .panel-heading Matches
  %ul.list-group
    - @roster.matches.each do |match|
      = link_to match, league_match_path(@competition, match), class: 'list-group-item'

- if user_can_edit_league? && !@roster.approved?
  .panel.panel-default
    .panel-heading Admin
    .panel-body
      = link_to 'Approve', league_roster_review_path(@competition, @roster),
                           class: 'btn btn-success'
      = button_to 'Decline', league_roster_path(@competition, @roster),
          method: :delete, class: 'btn btn-danger',
          data: { confirm: "Are you sure you want to decline this team's sign up?" }
