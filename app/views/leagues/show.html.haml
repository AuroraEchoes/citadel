- if @competition.hidden?
  .alert.alert-warning
    %span.glyphicon.glyphicon-lock
    Private

- if user_can_edit_league?
  = link_to edit_league_path(@competition), class: 'btn btn-default pull-right', type: 'button' do
    Manage
    %span.glyphicon.glyphicon-cog

%h1= @competition.name

.panel.panel-default
  .panel-heading Info
  .panel-body= markdown @competition.description

- unless @competition.matches.empty?
  .panel.panel-default
    .panel-heading
      - if user_signed_in?
        Your Upcoming Matches
      - else
        Upcoming Matches for #{@divisions.first}

      = link_to 'All Matches', league_matches_path(@competition),
                class: 'btn btn-default pull-right'

    %ul.list-group
      - matches = @divisions.first.matches.pending
      - if user_signed_in?
        - matches = current_user.matches.pending

      - present_collection(matches.pending).each do |match|
        %li.list-group-item
          = match.link

.panel.panel-default
  .panel-heading Teams
  %ul.list-group
    - if @competition.signuppable?
      - present_collection(@competition.rosters).each do |roster|
        %li.list-group-item
          = roster.link

    - else
      - @divisions.each do |div|
        %li.list-group-item
          %h3= div.name
          %ul.list-group
            - rosters = div.approved_rosters.sort_by(&:sort_keys)
            - present_collection(rosters).each_with_index do |roster, rank|
              %li.list-group-item
                = "##{rank + 1}:" if @competition.completed?
                = roster.link
                .pull-right
                  = roster.score_s

  - if user_signed_in?
    - if current_user.can_any?(:edit, :team) && @competition.signuppable?
      .panel-body
        = link_to 'Sign up', new_league_roster_path(@competition),
                             class: 'btn btn-success pull-right'

    - elsif current_user.entered?(@competition)
      - roster = present @competition.roster_transfer(current_user).first.roster

      .panel-body
        = roster.link 'View My Team', class: 'btn btn-default pull-right'

- if user_can_edit_league?
  .panel.panel-default
    .panel-heading Admin
    .panel-body
      - klass = 'btn btn-default pull-right'

      = link_to 'Transfers', league_transfers_path(@competition), class: klass
      = link_to 'Signups', league_rosters_path(@competition), class: klass
      = link_to 'Matches', league_matches_path(@competition), class: klass
