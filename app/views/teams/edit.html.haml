.panel.panel-default
  .panel-heading Information
  .panel-body
    = form_for @team, method: :patch do |f|
      .form-group
        = f.label :name
        = f.text_field :name, class: 'form-control'

      .form-group
        = f.label :description
        = f.text_area :description, rows: 10, class: 'form-control'

      = f.submit 'Save', class: 'btn btn-default'
      = link_to 'Cancel', team_path(@team), class: 'btn btn-default'

.panel.panel-default
  .panel-heading Permissions
  = render :layout => 'users' do |user|
    = button_to revoke_team_path(@team, user_id: user.id), method: :patch, class: 'btn btn-danger' do
      Revoke
      %span.glyphicon.glyphicon-remove
