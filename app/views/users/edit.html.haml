= form_for @user, method: :patch do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'

  = f.submit 'Save', class: 'btn btn-default'
  = link_to 'Cancel', user_path(@user), class: 'btn btn-default'
