/ .panel.borderless
/ .row
%h2.spaced-header
  Users

.col-sm-3.col-md-3.pull-right
  = render 'search'

%hr

.panel.panel-default
  - if @users.empty?
    .panel-body No users found...

  - else
    %ul.list-group
      - @users.each do |user|
        %li.list-group-item
          = render 'users/listing', user: user

= bootstrap_paginate @users
